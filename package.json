{
  "name": "@skylib/framework",
  "version": "1.0.0",
  "private": false,
  "description": "Typescript framework",
  "keywords": [
    "framework",
    "typescript"
  ],
  "homepage": "https://github.com/ilyub/typescript-framework",
  "bugs": {
    "url": "https://github.com/ilyub/typescript-framework/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ilyub/typescript-framework.git"
  },
  "license": "ISC",
  "author": "Ilia Liubinskii <admin.phpdev@gmail.com> (https://github.com/ilyub)",
  "publisher": "ilyub",
  "main": "dist/index.js",
  "module": "es/index.js",
  "scripts": {
    "build": "tsc --project tsconfig-build.json",
    "build-doc": "typedoc src",
    "build-es": "tsc --project tsconfig-build-es.json",
    "commitlint": "commitlint --edit",
    "commitlint-all": "commitlint --config commitlint-all.config.js --from=",
    "lint": "eslint --fix --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,configs,fixtures,src,tests}/**/*.{js,ts,vue}",
    "lint-fast": "eslint --config .eslintrc.fast.js --fix --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,configs,fixtures,src,tests}/**/*.{js,ts,vue}",
    "lint-no-fix": "eslint --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,configs,fixtures,src,tests}/**/*.{js,ts,vue}",
    "prepare": "cpy node_modules/@skylib/config/src/git-hooks/* .git/hooks",
    "test": "jest",
    "test-fast": "jest --config=jest.config.fast.js",
    "tsc": "tsc --noEmit",
    "update-package-check": "ncu --dep dev,prod --reject @types/node",
    "update-package-check-peer": "ncu --dep peer --minimal --reject @types/node",
    "update-package-check-skylib": "ncu --dep peer --filter @skylib/*",
    "update-package-force": "ncu --dep dev,prod --reject @types/node --upgrade",
    "update-package-force-peer": "ncu --dep peer --minimal --reject @types/node --upgrade",
    "update-package-force-skylib": "ncu --dep peer --filter @skylib/* --upgrade"
  },
  "devDependencies": {
    "@skylib/config": "^1.11.1",
    "@skylib/eslint-plugin": "^0.1.27",
    "jest-mock-axios": "^4.6.1"
  },
  "peerDependencies": {
    "@skylib/facades": "^3.0.0",
    "@skylib/functions": "^2.3.0",
    "@skylib/lodash-commonjs-es": "^0.1.0",
    "@skylib/typescript-types": "^1.0.0",
    "@types/facebook-js-sdk": "^3.3.5",
    "@types/gapi.auth2": "^0.0.56",
    "@types/jquery": "^3.5.14",
    "@types/lunr": "^2.3.4",
    "@types/natural-compare": "^1.4.1",
    "@types/pouchdb": "^6.4.0",
    "@types/pouchdb-adapter-memory": "^6.1.3",
    "@types/sha256": "^0.2.0",
    "@types/uuid": "^8.3.4",
    "axios": "^0.27.1",
    "date-fns": "^2.28.0",
    "jquery": "^3.6.0",
    "lorem-ipsum": "^2.0.4",
    "lunr": "^2.3.9",
    "minisearch": "^4.0.3",
    "natural-compare": "^1.4.0",
    "pouchdb": "^7.3.0",
    "pouchdb-adapter-memory": "^7.2.2",
    "pouchdb-collate": "^7.2.2",
    "sha256": "^0.2.0",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
